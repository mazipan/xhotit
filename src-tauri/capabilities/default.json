{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "window-state:default",
    "upload:default",
    {
      "identifier": "fs:allow-download-write",
      "allow": [{ "path": "$DOWNLOAD/**" }]
    },
    {
      "identifier": "fs:allow-download-write-recursive",
      "allow": [{ "path": "$DOWNLOAD/**" }]
    },
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$APPCONFIG" },
        { "path": "$APPCONFIG/**" },

        { "path": "$APPDATA" },
        { "path": "$APPDATA/**" },

        { "path": "$APPLOCALDATA" },
        { "path": "$APPLOCALDATA/**" },

        { "path": "$APPCACHE" },
        { "path": "$APPCACHE/**" },

        { "path": "$APPLOG" },
        { "path": "$APPLOG/**" },

        { "path": "$DOWNLOAD" },
        { "path": "$DOWNLOAD/**" }
      ]

    }
  ]
}
