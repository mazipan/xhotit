{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "xhotit",
  "version": "1.0.0",
  "identifier": "com.xhotit.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {

    "windows": [
      {
        "title": "xhotit",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APPCACHE/**",
          "$RESOURCE/**",
          "$DESKTOP/*",
          "$DOWNLOAD/*",
          "*/**"
        ]
      },
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost blob: data:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "DeveloperTool",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
