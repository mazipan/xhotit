{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Xhot It",
  "version": "1.1.0",
  "identifier": "com.xhotit.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Xhot It",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APPCACHE/**",
          "$RESOURCE/**",
          "$DESKTOP/*",
          "$DOWNLOAD/*",
          "*/**"
        ]
      },
      "csp": {
        "default-src": "'self' ipc: asset: blob: data: http://asset.localhost http://ipc.localhost",
        "connect-src": "'self' ipc: asset: blob: data: http://asset.localhost http://ipc.localhost",
        "font-src": ["https://fonts.gstatic.com"],
        "img-src": "'self' asset: blob: data: http://asset.localhost",
        "style-src": "'unsafe-inline' 'self' https://fonts.googleapis.com"
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "DeveloperTool",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "signingIdentity": "-"
    }
  }
}
